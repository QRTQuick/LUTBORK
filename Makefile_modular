# LUTBORK - Modular System Information Tool Makefile

CC = gcc
CFLAGS = -Wall -Wextra -std=c99 -Isrc
SRCDIR = src
OBJDIR = obj
BINDIR = bin

# Windows specific libraries
ifeq ($(OS),Windows_NT)
    LDFLAGS = -lsetupapi -lwbemuuid -lole32 -loleaut32
    TARGET = $(BINDIR)/lutbork.exe
else
    LDFLAGS = 
    TARGET = $(BINDIR)/lutbork
endif

# Source files
SOURCES = $(SRCDIR)/main.c $(SRCDIR)/colors.c $(SRCDIR)/disk_info.c $(SRCDIR)/driver_info.c $(SRCDIR)/kernel_info.c
OBJECTS = $(SOURCES:$(SRCDIR)/%.c=$(OBJDIR)/%.o)

# Create directories
$(shell mkdir -p $(OBJDIR) $(BINDIR))

# Default target
all: $(TARGET)

# Link the executable
$(TARGET): $(OBJECTS)
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS)
	@echo "LUTBORK built successfully!"

# Compile source files
$(OBJDIR)/%.o: $(SRCDIR)/%.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean build files
clean:
	rm -rf $(OBJDIR) $(BINDIR)
ifeq ($(OS),Windows_NT)
	if exist obj rmdir /s /q obj
	if exist bin rmdir /s /q bin
endif

# Run LUTBORK
run: $(TARGET)
	$(TARGET)

# Install (copy to system path)
install: $(TARGET)
ifeq ($(OS),Windows_NT)
	copy $(TARGET) C:\Windows\System32\
else
	sudo cp $(TARGET) /usr/local/bin/
endif

# Debug build
debug: CFLAGS += -g -DDEBUG
debug: $(TARGET)

# Release build
release: CFLAGS += -O2 -DNDEBUG
release: $(TARGET)

# Show help
help:
	@echo "LUTBORK - System Information Tool"
	@echo "Available targets:"
	@echo "  all      - Build LUTBORK"
	@echo "  clean    - Remove build files"
	@echo "  run      - Build and run LUTBORK"
	@echo "  debug    - Build with debug symbols"
	@echo "  release  - Build optimized release version"
	@echo "  install  - Install to system path"
	@echo "  help     - Show this help message"

.PHONY: all clean run install debug release help